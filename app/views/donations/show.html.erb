<h1>You have selected a donation of $<%= @donation.amount %></h1>

<%= form_tag donation_charges_path(@donation) do %>
<article>
  <% if flash[:error].present? %>
    <div id="error_explanation">
      <p><%= flash[:error] %></p>
    </div>
  <% end %>
  <label class="amount">
    <span>Amount: $<%= @donation.amount %></span>
  </label>
</article>

<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-description= "$<%= @donation.amount %> donation"
        data-amount="<% @donation.amount %>""
        data-locale="auto"></script>
<% end %>
