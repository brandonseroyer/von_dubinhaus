<%= form_for @donation do |f| %>
  <div class='col-xs-2'>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: "form-control", required: 'required' %><br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: "form-control", required: 'required' %><br>
    <%= f.label :email_address %>
    <%= f.text_field :email, class: "form-control", required: 'required' %><br>
    <%= f.label :donation_amount %>
    <%= f.text_field :amount, class: "form-control", required: 'required' %><br>
    <%= f.submit "Submit Donation", class: 'btn btn-success' %>
  </div>
<% end %>
<br>
