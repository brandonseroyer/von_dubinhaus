<%= render "layouts/errors", :object => @user %>

<%= form_for @user do |f| %>
<%= f.label :email %><br>
<%= f.text_field :email %><br>
<%=f.label :password %><br>
<%=f.password_field :password %><br>
<%=f.label :password_confirmation %><br>
<%=f.password_field :password_confirmation %><br><br>
<%= label_tag(:admin,  "Admin") %>
<%= check_box_tag(:admin, true) %><br><br>

<%= f.submit %>

<% end %>
