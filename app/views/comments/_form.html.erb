<div id="forms">
  <header>New Comment for <%= @dog.name %></header>
  <br>
  <%= render('layouts/errors', :object => @comment) %>

  <ul>
    <%= form_for [@dog, @comment] do |f| %>
      <%= f.label :name %>
      <br>
      <%= f.text_field :name %>
      <br><br>
      <%= f.label :comment %>
      <br>
      <%= f.text_area :comment, required: 'required' %>
      <br><br>
      <%= recaptcha_tags %>
      <br>
      <%= f.submit "Create Comment", class: 'btn btn-primary btn-md' %>
    <% end %>
  </ul>
</div>
