<div id="profile-head"><%= @dog.name %></div>
<br>
<%= image_tag @dog.image.url(:profile), id: 'pic' %>
<br>

<h3><%= link_to "Apply for Adoption!", new_applicant_path %></h3>
<h4>Breed: <i><%= @dog.breed %></i></h4>
<h4>Age: <i><%= @dog.age %> years old</i></h4>
<h4>Sex: <i><%= @dog.sex %></i></h4>
<h3><%= @dog.name %>'s Story:</h3>
<p><%= @dog.info %></p>
<h3><%= @dog.name %>'s Comments</h3>
<% if @dog.comments.any? %>
  <% @comments.each do |comment| %>
  <ul>
    <b><%= comment.author %>:</b> <i><%= comment.content %></i>
    <% if current_user.id == @dog.user_id %>
    <%= link_to "Edit", edit_dog_comment_path(@dog, comment) %> |
    <%= link_to "Delete", dog_comment_path(@dog, comment),
    :data => {:confirm => "Are you sure?",
      :method => "delete"} %>
      <% end %>
    </ul>
    <% end %>
  <% else %>
  <p>There are no comments yet!</p>
  <% end %>

  <div id='edit-dog-form'>
  </div>

<p><%= link_to "Add an comment", new_dog_comment_path(@dog) %></p>
<p><%= link_to "Edit", edit_dog_path(@dog), id:'edit-dog-link', remote: true %></p>
<p><%= link_to "Delete", dog_path(@dog),
:data => {:confirm => "You sure?",
  :method => "delete"} %></p>


