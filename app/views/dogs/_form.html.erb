<%= form_for @dog, html: { multipart: true }, remote: true do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", required: 'required' %><br>
    <%= f.label :breed %>
    <%= f.text_field :breed, class: "form-control", required: 'required' %><br>
    <%= f.label :age %>
    <%= f.text_field :age, class: "form-control", required: 'required' %><br>
    <%= f.label :sex %>
    <%= f.text_field :sex, class: "form-control", required: 'required' %><br>
    <%= f.label :info %>
    <%= f.cktext_area :info, class: "form-control", required: 'required' %><br>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class='form-group'>
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
