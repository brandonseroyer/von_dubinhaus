<%= form_for @testimonial, html: { multipart: true }, remote: true do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", required: 'required' %><br>
    <%= f.label :date %>
    <%= f.text_field :date, class: "form-control", required: 'required' %><br>
    <%= f.label :story %>
    <%= f.text_field :story, class: "form-control", required: 'required' %><br>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class='form-group'>
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
