<%= form_for @testimonial, html: { multipart: true }, remote: true do |f| %>
<div class='col-xs-2'>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", required: 'required' %><br>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <br>
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
